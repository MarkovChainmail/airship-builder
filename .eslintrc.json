{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": ["react", "react-hooks", "prettier"],
    "rules": {
      //add customize rules here as per your project's needs
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
